// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cliente {
  id String @id @unique @default(uuid())
  nome String
  cpf String @unique
  celular String
  endereco String
}

model Hamburguer {
  id String @id @unique @default(uuid())
  nome String @unique
  descricao String
  preco String
  ingredientes String
}
